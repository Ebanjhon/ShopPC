<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".FirstRegister">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/border_top_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:paddingBottom="10dp"
                    android:text="Firstname"
                    android:textColor="@color/violet"
                    android:textSize="25dp"
                    android:layout_marginBottom="-10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:textSize="24dp"
                    android:background="@drawable/edit_text_login_register"
                    android:fontFamily="@font/robotomedium"
                    android:inputType="text"
                    android:hint="Tên"
                    android:textColor="@color/tim"
                    android:paddingLeft="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:paddingBottom="10dp"
                    android:text="Lastname"
                    android:textColor="@color/violet"
                    android:textSize="25dp"
                    android:layout_marginBottom="-10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_login_register"
                    android:fontFamily="@font/robotomedium"
                    android:inputType="text"
                    android:hint="Họ"
                    android:textColor="@color/tim"
                    android:textSize="24dp"
                    android:paddingLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:paddingBottom="10dp"
                    android:text=" Email"
                    android:textColor="@color/violet"
                    android:textSize="25dp"
                    android:layout_marginBottom="-10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_login_register"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/tim"
                    android:inputType="text"
                    android:hint="Nhập Email"
                    android:textSize="24dp"
                    android:paddingLeft="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_date_range_24"
                    android:paddingBottom="10dp"
                    android:text="Birth date"
                    android:textColor="@color/violet"
                    android:textSize="25dp"
                    android:layout_marginBottom="-10dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/birthdate"
                        android:text="00/00/0000"
                        android:textSize="24dp"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_login_register"
                        android:textColor="@color/tim"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/btnShowCalender"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/baseline_cake_40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:paddingBottom="10dp"
                    android:text="Address"
                    android:textColor="@color/violet"
                    android:textSize="25dp"
                    android:layout_marginBottom="-10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_login_register"
                    android:fontFamily="@font/robotomedium"
                    android:textColor="@color/tim"
                    android:inputType="text"
                    android:hint="Đia chỉ"
                    android:textSize="24dp"
                    android:paddingLeft="15dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtToSecondFM"
                android:text="Tiếp tục -->"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/violet"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>