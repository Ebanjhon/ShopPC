<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gridImg"
        android:scaleType="centerCrop"
        android:src="@drawable/nentim"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/gridNameProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:textSize="18dp"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textColor="@color/chuden"
        android:fontFamily="@font/inter18ptmedium"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/gridPriceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.000.000đ"
        android:layout_gravity="left"
        android:textSize="18dp"
        android:textColor="@color/violet"
        android:fontFamily="@font/ibmplexsansbold"/>

    <TextView
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        android:background="@drawable/bo_vien_nhe"
        android:layout_gravity="right"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="Add cart" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Xem chi tiết.." />


</LinearLayout>