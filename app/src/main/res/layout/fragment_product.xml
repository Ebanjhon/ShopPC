<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/violet"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        tools:ignore="MissingConstraints">

                        <EditText
                            android:id="@+id/searchProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bo_vien_nhe"
                            android:hint="Nhập tên sản phẩm tìm kiếm"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/gray"
                            android:textSize="21dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:fontFamily="@font/robotomedium"
                                    android:text="Hãng:"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/vien_nhap_lieu">

                                    <Spinner
                                        android:id="@+id/spinnerCompa"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/black"
                                        android:drawablePadding="0dp"
                                        android:padding="5dp" />
                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:fontFamily="@font/robotomedium"
                                    android:text="Danh muc:"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/vien_nhap_lieu">

                                    <Spinner
                                        android:id="@+id/spinnerCategory"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/black"
                                        android:drawablePadding="0dp"
                                        android:padding="5dp" />
                                </FrameLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/buttonFilterProduct"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bo_vien_nhe"
                            android:backgroundTint="@color/violet"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            android:text="Áp dụng bộ lọc"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="26dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/buttonAddProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bo_vien_nhe"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Add product"
                            android:textColor="@color/green"
                            android:textSize="17dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/robotomedium"
                        android:text="Danh sách sản phẩm:"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>
            </ScrollView>

            <ListView
                android:id="@+id/listViewProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
