<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp bóng -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" /> <!-- Màu của bóng -->
            <corners android:radius="10dp" /> <!-- Bo góc -->
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="7dp" /> <!-- Khoảng cách bóng -->
        </shape>
    </item>

    <!-- Lớp nút bấm -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Màu của nút -->
            <corners android:radius="10dp" /> <!-- Bo góc nút -->
        </shape>
    </item>

</layer-list>
