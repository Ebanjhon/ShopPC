<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Định nghĩa đường viền -->
    <solid android:color="@android:color/white" />
    <stroke
        android:width="1dp"
        android:color="@color/xam" /> <!-- Đường viền màu đỏ -->

    <!-- Bo góc tròn -->
    <corners android:radius="6dp" />

    <!-- Đổ bóng (tùy chọn) -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

</shape>